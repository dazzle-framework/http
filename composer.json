{
    "name": "dazzlesoftware/http",
    "type": "library",
    "description": "Dazzle HTTP Package",
    "keywords": ["dazzle", "framework", "http"],
    "homepage": "https://github.com/dazzle-framework/http",
    "license": "GPL-3.0-or-later",
    "require": {
       "php": "^7.3.0",
        "dazzlesoftware/uri": "^1.0",
        "composer/ca-bundle": "^1.0",
        "laminas/laminas-diactoros": "^2.2.2",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "dazzlesoftware/dazzle-coding-standard": "^1.0",
        "dazzlesoftware/test": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "suggest": {
        "ext-curl": "To use cURL for HTTP connections"
    },
    "autoload": {
        "psr-4": {
            "Dazzle\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dazzle\\Http\\UnitTests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-2.0-dev": "2.0-dev"
        }
    }
}
